<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.Shell"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="ERP.Shell.grid"
        mc:Ignorable="d"
        Title="grid" Height="750" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        WindowState="Maximized" Background="#FF042C39" Closing="Window_Closing">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="24*" />
        </Grid.RowDefinitions>

        <!-- Üst Sağ Butonlar -->
        <Button Grid.Column="3" Content="Button" HorizontalAlignment="Right" Margin="0,2,0,2"
             VerticalAlignment="Top" Width="30" Height="30"
             BorderBrush="#00000000" Foreground="{x:Null}"
             Click="Button_Click" Cursor="Hand" FocusVisualStyle="{x:Null}">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/Plugins/closeBut.png"/>
            </Button.Background>
        </Button>

        <Button Grid.Column="3" Content="Button" Margin="0,2,30,0" VerticalAlignment="Top" Height="30"
     BorderBrush="{x:Null}" Foreground="{x:Null}"
     Click="Button_Click_1" HorizontalAlignment="Right"
     Width="30" Cursor="Hand" FocusVisualStyle="{x:Null}">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/Plugins/minimizeBut.png"/>
            </Button.Background>
        </Button>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="50,10,10,10" HorizontalAlignment="Left" Height="20" Grid.ColumnSpan="5" >
            <ComboBox x:Name="cmbDepartman" SelectionChanged="Filter_SelectionChanged" Margin="0,0,20,0" Width="100" Height="20" />
            <ComboBox x:Name="cmbSehir" SelectionChanged="Filter_SelectionChanged" Margin="0,0,20,0" Width="100" />
            <ComboBox x:Name="cmbTelefonTipi" SelectionChanged="Filter_SelectionChanged" Width="100" />
        </StackPanel>

        <Border Grid.Row="1" Grid.ColumnSpan="5" Margin="20,5,20,20" CornerRadius="20" Background="White">
            <dxg:GridControl x:Name="customersGrid" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True"
                     ClipToBounds="True" SizeChanged="customersGrid_SizeChanged">
                <dxg:GridControl.View>
                    <dxg:TableView AllowHeaderNavigation="True" TotalSummaryPosition="Bottom"/>
                </dxg:GridControl.View>
            </dxg:GridControl>
        </Border>


    </Grid>
</Window>
