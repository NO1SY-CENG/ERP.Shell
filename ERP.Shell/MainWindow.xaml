<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.Shell"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="ERP.Shell.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        WindowState="Maximized" Background="#FF042C39">

    <Window.Resources>
        <Style x:Key="smalBorderStyleH" TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="5,5,5,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <EventSetter Event="MouseLeftButtonDown" Handler="Border_MouseLeftButtonDown1"/>
        </Style>
        
        <Style x:Key="smalBorderStyleM" TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="5,5,5,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <EventSetter Event="MouseLeftButtonDown" Handler="Border_MouseLeftButtonDown1"/>
            
        </Style>
        <Style x:Key="smalBorderStyleSM" TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="5,5,5,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <EventSetter Event="MouseLeftButtonDown" Handler="Border_MouseLeftButtonDown2"/>

        </Style>
        <Style x:Key="smalBorderStyleMenus" TargetType="Border">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="hamburgerColm" Width="*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="24*" />
        </Grid.RowDefinitions>

        <!-- Üst Sağ Butonlar -->
        <Button Grid.Column="3" Content="Button" HorizontalAlignment="Right" Margin="0,2,0,2"
         VerticalAlignment="Top" Width="30" Height="30"
         BorderBrush="#00000000" Foreground="{x:Null}"
         Click="Button_Click" Cursor="Hand" FocusVisualStyle="{x:Null}">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/Plugins/closeBut.png"/>
            </Button.Background>
        </Button>

        <Button Grid.Column="3" Content="Button" Margin="0,2,30,0" VerticalAlignment="Top" Height="30"
         BorderBrush="{x:Null}" Foreground="{x:Null}"
         Click="Button_Click_1" HorizontalAlignment="Right"
         Width="30" Cursor="Hand" FocusVisualStyle="{x:Null}">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/Plugins/minimizeBut.png"/>
            </Button.Background>
        </Button>

        <Border x:Name="searchBorder" Margin="2" Style="{StaticResource smalBorderStyleMenus}" Grid.Column="1">
            <TextBox x:Name="SearchText" 
              Background="Transparent" 
              BorderBrush="Transparent" 
              BorderThickness="0"
              CaretBrush="White" 
              Foreground="White" 
              SelectionBrush="LightBlue" 
              FocusVisualStyle="{x:Null}" Margin="2,4,2,2" Cursor="IBeam" TextChanged="SearchText_TextChanged" />

        </Border>

        <Border x:Name="HamburgerBorder" Margin="2"  Grid.RowSpan="4" Style="{StaticResource smalBorderStyleMenus}" MouseEnter="HamburgerBorder_MouseEnter" MouseLeave="HamburgerBorder_MouseLeave" >
            <Grid Margin="2,0,0,2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource smalBorderStyleH}" Cursor="Hand">

                </Border>
                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="7" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
                <Border Grid.Row="8" Grid.Column="0" Style="{StaticResource smalBorderStyleH}">

                </Border>
            </Grid>
        </Border>



        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource smalBorderStyleMenus}" Margin="0,0,0,5" >
            <Grid x:Name="MainGrid" Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                           Content="MENU" FontSize="30" FontWeight="Bold"
                           HorizontalAlignment="Left" Margin="0,10" Foreground="White"/>


                
                <!-- Sütun 1 -->
                <Border x:Name="AccountBut"
                  Grid.Row="1"
                  Grid.Column="0"
                    Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/accont.png"
                         Stretch="Fill"
                         Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="ACCOUNTS"
                        HorizontalAlignment="Center"
                         Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border x:Name="adminBorder" Grid.Row="2" Grid.Column="0"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/admin.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="ADMİN"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="3" Grid.Column="0"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/bussinesTerm.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Bussines Term"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Grid.Column="0"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/accont.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="ACCOUNTS"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="5" Grid.Column="0"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/financal.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Financal"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>

                <!-- Sütun 2 -->
                <Border Grid.Row="1" Grid.Column="1"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/office.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Office"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Grid.Column="1"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/products.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Products"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="3" Grid.Column="1"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/purchase.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Purchase"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Grid.Column="1"   Style="{StaticResource smalBorderStyleM}" >
                    <StackPanel>
                        <Image Source="/quick.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Quick"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="5" Grid.Column="1"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/report.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Reports"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>

                <!-- Sütun 3 -->
                <Border Grid.Row="1" Grid.Column="2"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image Source="/sale.png"
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Sale    "
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Grid.Column="2"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Text"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="3" Grid.Column="2"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Text"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="4" Grid.Column="2"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Text"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="5" Grid.Column="2"   Style="{StaticResource smalBorderStyleM}">
                    <StackPanel>
                        <Image
     Stretch="Fill"
     Margin="5,5,5,0" Width="70" Height="70" />
                        <Label Content="Text"
    HorizontalAlignment="Center"
     Foreground="White" FontSize="20"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Sağ tarafta kalan boş alan -->
        <Grid x:Name="subMenuGrid" Grid.Column="2" Grid.Row="1" Margin="5,0,5,5">
            <Border Grid.Column="0" Style="{StaticResource smalBorderStyleMenus}" >
                <Grid Margin="10,0,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"  Grid.ColumnSpan="3"
               Content="SUB MENU" FontSize="30" FontWeight="Bold"
               HorizontalAlignment="Left" Foreground="White" />

                    <!-- Sütun 1 -->
                    <Border  Grid.Row="1" Grid.Column="0" Style="{StaticResource smalBorderStyleSM}"  >
                        
                    </Border>
                    <Border Grid.Row="2" Grid.Column="0"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="3" Grid.Column="0"   Style="{StaticResource smalBorderStyleSM}">
                       
                    </Border>
                    <Border Grid.Row="4" Grid.Column="0"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="5" Grid.Column="0"   Style="{StaticResource smalBorderStyleSM}">
                       
                    </Border>

                    <!-- Sütun 2 -->
                    <Border Grid.Row="1" Grid.Column="1"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="4" Grid.Column="1"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="5" Grid.Column="1"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>

                    <!-- Sütun 3 -->
                    <Border Grid.Row="1" Grid.Column="2"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="2" Grid.Column="2"   Style="{StaticResource smalBorderStyleSM}">
                       
                    </Border>
                    <Border Grid.Row="3" Grid.Column="2"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                    <Border Grid.Row="4" Grid.Column="2"   Style="{StaticResource smalBorderStyleSM}">
                       
                    </Border>
                    <Border Grid.Row="5" Grid.Column="2"   Style="{StaticResource smalBorderStyleSM}">
                        
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
