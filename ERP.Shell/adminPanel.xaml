<Window x:Class="ERP.Shell.adminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.Shell"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        mc:Ignorable="d"
        Title="adminPanel"
        Height="400" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">


    <Border Background="#E5042C39" CornerRadius="10,10,10,10" BorderThickness="1" Margin="20,20,20,20">
        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>
        <Grid >
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="388*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <dxe:TextEdit x:Name="userText" HorizontalAlignment="Center" VerticalAlignment="Top" Width="275" NullText="USERNAME" Height="35" FontSize="20" Margin="0,100,0,0" PreviewTextInput="uPreviewTextInput" EditValueChanged="u_EditValueChanged" />
            <Button x:Name="saveBut" Content="SAVE" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="35" FontWeight="Bold" FontSize="20" Foreground="#FF9DA79C" Margin="0,0,42,52" Background="Transparent" MouseEnter="saveBut_MouseEnter" MouseLeave="saveBut_MouseLeave" Cursor="Hand" Click="Button_Click_2" >
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop x:Name="MyGradientStop" Color="#FF978E8E" Offset="0"/>
                        <GradientStop Color="#FF978E8E" Offset="1"/>
                    </LinearGradientBrush>
                </Button.BorderBrush>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="Button" HorizontalAlignment="Right" Margin="0,2,0,2" VerticalAlignment="Top" Width="30" Height="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click" Cursor="Hand">
                <Button.Background>
                    <ImageBrush  Stretch="Uniform" ImageSource="/Plugins/closeBut.png"/>
                </Button.Background>
            </Button>
            <Button Content="Button" Margin="0,2,27,2" VerticalAlignment="Top" Height="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_1" HorizontalAlignment="Right" Width="30" Cursor="Hand">
                <Button.Background>
                    <ImageBrush  Stretch="Uniform" ImageSource="/Plugins/minimizeBut.png"/>
                </Button.Background>
            </Button>
            <Grid x:Name="TopBar" Background="Transparent" Height="35" MouseDown="Grid_MouseDown" VerticalAlignment="Top" Margin="0,0,51,0">
            </Grid>
            <Label x:Name="alertText" Content="Invalid username or password." Margin="64,218,145,104" FontSize="14" Foreground="Red"/>
            <Label Content="ADD USER" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" FontWeight="Bold"/>
            <dxe:TextEdit x:Name="pswdText" HorizontalAlignment="Center" VerticalAlignment="Top" Width="275" Height="35" FontSize="20" Margin="0,144,0,0" NullText="PASSWORD" PreviewTextInput="uPreviewTextInput" EditValueChanged="u_EditValueChanged" />
        </Grid>
    </Border>
</Window>